            <i class="fas fa-times close close-concour"></i>
            <form action="/Admin/createconcours" method="POST">
                <div class="annonce-titre">
                    <label for="">Titre: </label>
                    <input type="text" name="titre" id="titre" placeholder="Titre" required>
                </div>
